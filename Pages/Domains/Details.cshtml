@page "{id:int}"
@model MagicMail.Pages.Domains.DetailsModel
@{
    ViewData["Title"] = "Domain Details";
}

<div class="max-w-7xl mx-auto px-4 sm:px-0 py-6">
    <!-- Header -->
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="min-w-0 flex-1">
             <nav class="flex" aria-label="Breadcrumb">
                <ol role="list" class="flex items-center space-x-4">
                    <li>
                        <div>
                        <a href="/" class="text-slate-400 hover:text-slate-500"><i class="bi bi-house-door"></i></a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                        <i class="bi bi-chevron-right text-slate-400 text-xs"></i>
                        <a href="/Domains/Index" class="ml-4 text-sm font-medium text-slate-500 hover:text-slate-700">Domains</a>
                        </div>
                    </li>
                     <li>
                        <div class="flex items-center">
                        <i class="bi bi-chevron-right text-slate-400 text-xs"></i>
                        <span class="ml-4 text-sm font-medium text-slate-500" aria-current="page">Details</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h2 class="mt-2 text-2xl font-bold leading-7 text-slate-900 sm:truncate sm:text-3xl sm:tracking-tight">
                @Model.Domain.DomainName
            </h2>
        </div>
        <div class="mt-4 flex md:ml-4 md:mt-0">
             <a asp-page="./Index" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 hover:bg-slate-50">Back</a>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="rounded-md bg-green-50 p-4 mb-6 border border-green-200">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-check-circle-fill text-green-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-green-800">@TempData["Message"]</p>
                </div>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
         <div class="rounded-md bg-red-50 p-4 mb-6 border border-red-200">
            <div class="flex">
                <div class="flex-shrink-0">
                    <i class="bi bi-x-circle-fill text-red-400"></i>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-red-800">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        </div>
    }

    <!-- ROW 1: DNS Configuration + Domain Info/Danger Zone -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
        <!-- Main Column (Left/Top) -->
        <div class="lg:col-span-2 space-y-6">
            
            <!-- DNS Configuration Card -->
            <div class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl overflow-hidden">
                <div class="border-b border-slate-200 px-4 py-5 sm:px-6">
                    <h3 class="text-base font-semibold leading-6 text-slate-900">DNS Configuration</h3>
                    <p class="mt-1 text-sm text-slate-500">Required records to authorize sending.</p>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    <p class="text-sm text-slate-600 mb-4">Add these records to your DNS provider (Cloudflare, GoDaddy, etc.)</p>
                    
                    <div class="overflow-x-auto rounded-lg border border-slate-200 mb-6">
                        <table class="min-w-full divide-y divide-slate-200">
                            <thead class="bg-slate-50">
                                <tr>
                                    <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider w-16">Status</th>
                                    <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Type</th>
                                    <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Name (Host)</th>
                                    <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Value</th>
                                    <th class="px-3 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-slate-200">
                                <!-- MX Record -->
                                <tr>
                                    <td class="px-3 py-4 text-center">
                                        @if (Model.DnsResult?.MxValid == true) {
                                            <span class="text-green-500 text-lg" title="Verified">✓</span>
                                        } else {
                                            <span class="text-red-400 text-lg" title="Not found">✗</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 whitespace-nowrap text-sm text-slate-500"><span class="inline-flex items-center rounded-sm bg-purple-50 px-2 py-0.5 text-xs font-medium text-purple-800">MX</span></td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-900">@Model.Domain.DomainName</td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-600 break-all">@Model.MxRecordValue <span class="text-xs text-slate-400 ml-1">(Priority 10)</span></td>
                                    <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="navigator.clipboard.writeText('@Model.MxRecordValue')" class="text-brand-600 hover:text-brand-900">Copy</button>
                                    </td>
                                </tr>
                                <!-- A Record (mail) -->
                                <tr>
                                    <td class="px-3 py-4 text-center">
                                        @if (Model.DnsResult?.MxValid == true) {
                                            <span class="text-green-500 text-lg" title="Verified">✓</span>
                                        } else {
                                            <span class="text-red-400 text-lg" title="Not found">✗</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 whitespace-nowrap text-sm text-slate-500"><span class="inline-flex items-center rounded-sm bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-800">A</span></td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-900">mail.@Model.Domain.DomainName</td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-600 break-all">@Model.MailARecordValue</td>
                                    <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="navigator.clipboard.writeText('@Model.MailARecordValue')" class="text-brand-600 hover:text-brand-900">Copy</button>
                                    </td>
                                </tr>
                                <!-- SPF -->
                                <tr>
                                    <td class="px-3 py-4 text-center">
                                        @if (Model.DnsResult?.SpfValid == true) {
                                            <span class="text-green-500 text-lg" title="Verified">✓</span>
                                        } else {
                                            <span class="text-red-400 text-lg" title="Not found">✗</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 whitespace-nowrap text-sm text-slate-500"><span class="inline-flex items-center rounded-sm bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-800">TXT</span></td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-900">@Model.SpfRecordName</td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-600 break-all">@Model.SpfRecordValue</td>
                                    <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="navigator.clipboard.writeText('@Model.SpfRecordValue')" class="text-brand-600 hover:text-brand-900">Copy</button>
                                    </td>
                                </tr>
                                <!-- DKIM -->
                                <tr>
                                    <td class="px-3 py-4 text-center">
                                        @if (Model.DnsResult?.DkimValid == true) {
                                            <span class="text-green-500 text-lg" title="Verified">✓</span>
                                        } else {
                                            <span class="text-red-400 text-lg" title="Not found">✗</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 whitespace-nowrap text-sm text-slate-500"><span class="inline-flex items-center rounded-sm bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-800">TXT</span></td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-900 break-all">@Model.DkimRecordName</td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-600 max-w-xs truncate" title="@Model.DkimRecordValue">@Model.DkimRecordValue</td>
                                    <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="navigator.clipboard.writeText('@Model.DkimRecordValue')" class="text-brand-600 hover:text-brand-900">Copy</button>
                                    </td>
                                </tr>
                                <!-- DMARC -->
                                <tr>
                                    <td class="px-3 py-4 text-center">
                                        @if (Model.DnsResult?.DmarcValid == true) {
                                            <span class="text-green-500 text-lg" title="Verified">✓</span>
                                        } else {
                                            <span class="text-red-400 text-lg" title="Not found">✗</span>
                                        }
                                    </td>
                                    <td class="px-3 py-4 whitespace-nowrap text-sm text-slate-500"><span class="inline-flex items-center rounded-sm bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-800">TXT</span></td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-900">@Model.DmarcRecordName</td>
                                    <td class="px-3 py-4 text-sm font-mono text-slate-600">@Model.DmarcRecordValue</td>
                                    <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="navigator.clipboard.writeText('@Model.DmarcRecordValue')" class="text-brand-600 hover:text-brand-900">Copy</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="flex flex-wrap gap-3 mt-4">
                        @if (!Model.Domain.IsVerified)
                        {
                            <!-- Verify DNS Button (works with any provider) -->
                            <form asp-page-handler="VerifyDns" method="post">
                                <button type="submit" class="inline-flex items-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                                    <i class="bi bi-check2-circle mr-2"></i> Verify DNS
                                </button>
                            </form>
                        }
                        
                        <!-- Sync to Cloudflare Button -->
                        <form asp-page-handler="SyncCloudflare" method="post">
                            <button type="submit" class="inline-flex items-center rounded-md bg-orange-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600">
                                <i class="bi bi-cloud-upload mr-2"></i> Sync to Cloudflare
                            </button>
                        </form>
                    </div>
                    <p class="mt-2 text-xs text-slate-500">
                        <strong>Verify DNS:</strong> Check if records already exist (any provider). 
                        <strong>Sync to Cloudflare:</strong> Auto-create missing records via Cloudflare API.
                    </p>
                </div>
            </div>

        </div> 
        
        <!-- Sidebar Column (Right) Row 1 -->
        <div class="space-y-6">
             <!-- Info Card -->
            <div class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl overflow-hidden">
                <div class="border-b border-slate-200 px-4 py-5 sm:px-6">
                    <h3 class="text-base font-semibold leading-6 text-slate-900">Domain Info</h3>
                </div>
                <div class="border-t border-slate-200 px-4 py-5 sm:p-0">
                    <dl class="divide-y divide-slate-200">
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-slate-500">ID</dt>
                            <dd class="mt-1 text-sm text-slate-900 sm:col-span-2 sm:mt-0">@Model.Domain.Id</dd>
                        </div>
                        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-slate-500">Status</dt>
                            <dd class="mt-1 text-sm text-slate-900 sm:col-span-2 sm:mt-0">
                                @if (Model.Domain.IsVerified)
                                {
                                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Verified</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">Unverified</span>
                                }
                            </dd>
                        </div>
                         <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-slate-500">Zone ID</dt>
                            <dd class="mt-1 text-sm text-slate-900 sm:col-span-2 sm:mt-0">
                                 @if (!string.IsNullOrEmpty(Model.Domain.CloudflareZoneId))
                                {
                                    <code class="text-xs">@Model.Domain.CloudflareZoneId</code>
                                }
                                else
                                {
                                    <span class="text-slate-400 italic">Not Synced</span>
                                }
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="bg-white shadow-sm ring-1 ring-red-200 rounded-xl overflow-hidden">
                <div class="border-b border-red-100 bg-red-50 px-4 py-5 sm:px-6">
                    <h3 class="text-base font-semibold leading-6 text-red-700">Danger Zone</h3>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    <p class="text-sm text-slate-500 mb-4">Deleting this domain will permanently remove it from the database and attempt to clean up Cloudflare records.</p>
                     <form asp-page-handler="Delete" method="post">
                        <button type="submit" class="w-full rounded-md bg-white px-3 py-2 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50 transition-colors" onclick="return confirm('Are you sure you want to delete this domain? This cannot be undone.');">
                            Delete Domain
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- End Row 1 -->

    <!-- ROW 2: Email Aliases + Test Delivery -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Column (Left) -->
        <div class="lg:col-span-2">
             <!-- Email Aliases Card -->
            <div class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl overflow-hidden h-full">
                <div class="border-b border-slate-200 px-4 py-5 sm:px-6">
                    <h3 class="text-base font-semibold leading-6 text-slate-900">
                        <i class="bi bi-envelope-arrow-up mr-2"></i>Email Aliases (Forwarding)
                    </h3>
                    <p class="mt-1 text-sm text-slate-500">Forward incoming emails to external addresses. Use <code class="bg-slate-100 px-1 rounded">*</code> as catch-all.</p>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    @if (Model.Aliases.Any())
                    {
                        <div class="overflow-x-auto rounded-lg border border-slate-200 mb-4">
                            <table class="min-w-full divide-y divide-slate-200">
                                <thead class="bg-slate-50">
                                    <tr>
                                        <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Alias</th>
                                        <th class="px-3 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Forward To</th>
                                        <th class="px-3 py-3 text-center text-xs font-medium text-slate-500 uppercase tracking-wider">Header</th>
                                        <th class="px-3 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-slate-200">
                                    @foreach (var alias in Model.Aliases)
                                    {
                                        <tr>
                                            <td class="px-3 py-4 text-sm font-mono text-slate-900">
                                                @alias.LocalPart<span class="text-slate-400">@@@Model.Domain.DomainName</span>
                                            </td>
                                            <td class="px-3 py-4 text-sm font-mono text-slate-600">@alias.ForwardTo</td>
                                            <td class="px-3 py-4 text-center">
                                                <form asp-page-handler="ToggleHeader" method="post" class="inline">
                                                    <input type="hidden" name="aliasId" value="@alias.Id" />
                                                    <button type="submit" class="text-sm font-medium @(alias.IncludeForwardHeader ? "text-green-600 hover:text-green-900" : "text-slate-400 hover:text-slate-600")" title="Toggle Forward Header">
                                                        <i class="bi @(alias.IncludeForwardHeader ? "bi-check-square-fill" : "bi-square")"></i>
                                                    </button>
                                                </form>
                                            </td>
                                            <td class="px-3 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <form asp-page-handler="DeleteAlias" method="post" class="inline">
                                                    <input type="hidden" name="aliasId" value="@alias.Id" />
                                                    <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Are you sure?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-sm text-slate-500 mb-4">No aliases configured yet.</p>
                    }

                    <div class="mt-4 bg-slate-50 rounded-lg p-4">
                        <h4 class="text-sm font-medium text-slate-900 mb-3">Add New Alias</h4>
                        <form asp-page-handler="AddAlias" method="post" class="space-y-3 sm:space-y-0 sm:flex sm:items-end sm:gap-3">
                            <div class="w-full sm:w-1/3">
                                <label for="localPart" class="block text-xs font-medium text-slate-500 mb-1">Alias (e.g. support)</label>
                                <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-slate-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-brand-600">
                                    <input type="text" name="localPart" id="localPart" class="block w-full border-0 bg-transparent py-1.5 pl-2 text-slate-900 placeholder:text-slate-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="alias" required>
                                    <span class="flex select-none items-center pr-3 text-slate-500 sm:text-sm">@@@Model.Domain.DomainName</span>
                                </div>
                            </div>
                            <div class="w-full sm:w-1/3">
                                <label for="forwardTo" class="block text-xs font-medium text-slate-500 mb-1">Forward To</label>
                                <input type="email" name="forwardTo" id="forwardTo" class="block w-full rounded-md border-0 py-1.5 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6" placeholder="real@gmail.com" required>
                            </div>
                            <div class="flex items-center pb-2">
                                <input id="includeForwardHeader" name="includeForwardHeader" type="checkbox" value="true" checked class="h-4 w-4 rounded border-slate-300 text-brand-600 focus:ring-brand-600">
                                <label for="includeForwardHeader" class="ml-2 block text-xs font-medium text-slate-600" title="Include 'Forwarded Email' info box in body">
                                    Fwd Info
                                </label>
                            </div>
                            <button type="submit" class="w-full sm:w-auto rounded-md bg-brand-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600">
                                Add Alias
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Column (Right) Row 2 -->
        <div class="space-y-6 lg:self-start">
             <!-- Test Delivery Card (Sidebar) -->
            <div class="bg-white shadow-sm ring-1 ring-slate-900/5 rounded-xl overflow-hidden">
                <div class="border-b border-slate-200 px-4 py-5 sm:px-6">
                    <h3 class="text-base font-semibold leading-6 text-slate-900">Test Delivery</h3>
                </div>
                <div class="px-4 py-5 sm:p-6">
                    <form asp-page-handler="TestEmail" method="post" class="flex flex-col gap-3">
                        <div class="w-full">
                             <label for="testEmail" class="sr-only">Recipient Email</label>
                             <input type="email" name="testEmail" id="testEmail" class="block w-full rounded-md border-0 py-1.5 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6" placeholder="target@email.com" required>
                        </div>
                        <button type="submit" class="w-full inline-flex items-center justify-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">
                            Send Test Email
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- End Row 2 -->
</div>
