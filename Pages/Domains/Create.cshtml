@page
@model MagicMail.Pages.Domains.CreateModel
@{
    ViewData["Title"] = "Add Domain";
}

<h1>Add Domain</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Input.DomainName" class="control-label"></label>
                <input asp-for="Input.DomainName" class="form-control" placeholder="example.com" />
                <span asp-validation-for="Input.DomainName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                 <label asp-for="Input.ServerIp" class="control-label">Your VPS IP (for SPF)</label>
                 <input asp-for="Input.ServerIp" class="form-control" />
                 <span asp-validation-for="Input.ServerIp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create & Configure DNS" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
