@page
@model MagicMail.Pages.Domains.CreateModel
@{
    ViewData["Title"] = "Add Domain";
}

<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="mx-auto h-12 w-12 rounded-lg bg-gradient-to-br from-brand-500 to-purple-600 flex items-center justify-center text-white font-bold shadow-md">
            <i class="bi bi-plus-lg text-xl"></i>
        </div>
        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-slate-900">Add a new domain</h2>
        <p class="mt-2 text-center text-sm text-slate-500">
            Start sending emails by verifying your domain ownership.
        </p>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
        <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12 border border-slate-100">
            <form class="space-y-6" method="post">
                <div asp-validation-summary="ModelOnly" class="rounded-md bg-red-50 p-4 mb-4 text-sm text-red-700"></div>

                <div>
                    <label asp-for="Input.DomainName" class="block text-sm font-medium leading-6 text-slate-900">Domain Name</label>
                    <div class="mt-2">
                        <input asp-for="Input.DomainName" class="block w-full rounded-md border-0 py-1.5 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-brand-600 sm:text-sm sm:leading-6" placeholder="example.com" required />
                        <span asp-validation-for="Input.DomainName" class="mt-1 text-sm text-red-600"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-brand-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-brand-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 transition-all">
                        Create Domain
                    </button>
                </div>
            </form>

            <p class="mt-10 text-center text-sm text-slate-500">
                <a asp-page="./Index" class="font-semibold leading-6 text-brand-600 hover:text-brand-500">
                    <i class="bi bi-arrow-left"></i> Back to Domains
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
